+long
+lrand48(void)
+{
+    RAND48R1 = (RAND48A1 * RAND48R1 << 16)
+      + RAND48A1 * RAND48R2 + RAND48A2 * RAND48R1
+      + ((RAND48A2 * RAND48R2 + RAND48C) >> 16);
+    RAND48R2 = (RAND48A2 * RAND48R2 + RAND48C) & 0xffff;
+    return (long)(RAND48R1 >> 1);
+}
